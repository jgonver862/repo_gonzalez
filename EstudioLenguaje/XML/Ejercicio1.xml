<?xml version="1.0" encoding="UTF-8"?>
<receta id="1">
    <nombre>Sopa de cebolla</nombre>
    <!-- También se podría poner como atributo de receta o del nombre de la receta -->
    <num_comensales>4</num_comensales>
    <ingredientes>
        <ingrediente>
            <nombreingrediente>Cebolla</nombreingrediente>
            <cantidad unidad="kg">1</cantidad>
        </ingrediente>
        <ingrediente>
            <nombreingrediente>Caldo de res</nombreingrediente>
            <cantidad unidad="l">2</cantidad>
        </ingrediente>
        <ingrediente>
            <nombreingrediente>Mantequilla</nombreingrediente>
            <cantidad unidad="gr">100</cantidad>
        </ingrediente>
        <ingrediente>
            <nombreingrediente>Cucharada De Harina</nombreingrediente>
            <cantidad>1</cantidad>
        </ingrediente>
        <ingrediente>
            <nombreingrediente>Queso rallado</nombreingrediente>
            <cantidad unidad="gr">100</cantidad>
        </ingrediente>
        <ingrediente>
            <nombreingrediente>Pan tostado</nombreingrediente>
            <cantidad unidad="rebanada"/>
        </ingrediente>
        <ingrediente>
            <nombreingrediente>Tormillo</nombreingrediente>
            <cantidad></cantidad>
        </ingrediente>
        <ingrediente>
            <nombreingrediente>Hoja de laurel</nombreingrediente>
            <cantidad>1</cantidad>
        </ingrediente>
        <ingrediente>
            <nombreingrediente>Pimienta</nombreingrediente>
            <!-- No incluye la etiqueta cantidad por que no se indica también 
            podriamos incluir la etiqueta vacía <cantidad/>-->
            <cantidad/>
        </ingrediente>
    </ingredientes>
    <proceso>
        <paso orden="1">
            <tiempo/>
            <instruccion>Pelar y cortar las cebollas en rodajas finas.</instruccion>
        </paso>
        <paso orden="2">
            <tiempo/>
            <instruccion>Sofreírlas con la mantequilla, sal y pimienta a fuego lento hasta que estén translúcidas sin dorarse.</instruccion>
        </paso>
        <paso orden="3">
            <tiempo/>
            <instruccion>Añadir la harina mientras se remueve continuamente.</instruccion>
        </paso>
        <paso orden="4">
            <tiempo/>
            <instruccion>Pasar la mezcla a una olla con el caldo, el tomillo y la hoja de laurel.</instruccion>
        </paso>
        <paso orden="5">
            <tiempo unidad="minutos">15</tiempo>
            <instruccion>Dejar hervir a fuego lento</instruccion>
        </paso>
        <paso orden="6">
            <tiempo/>
            <instruccion>Colocar las rebanadas de pan encima, espolvorear con el queso y gratinar en el horno.</instruccion>
        </paso>
    </proceso>
</receta>